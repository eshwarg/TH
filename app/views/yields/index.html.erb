
<p> <%= link_to "New Yield", new_yield_path %> </p>

<p> List of Yields </p>

<% if @yields.empty? %>

    <p class="subText">
       There are no section yields created right now.  <%= link_to "Add New", new_yield_path %>
    </p>
    
<% else %>

    <table id="mytable"  cellspacing="0" cellpadding="0">
    <thead> 
      <tr>
        <th>Section</th>
        <th>Proposed</th>
        <th>Actual</th>
        <th>Year</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <% for y in @yields %>
          <tr>
              <td><%= y.section.name %></td>  &nbsp;
              <td><%= y.proposed %></td>  &nbsp;
              <td><%= y.actual %></td>  &nbsp;
              <td><%= y.year %></td>  &nbsp;
              <td>
                 <%= link_to "Edit", edit_yield_path(y) %>  &nbsp;   &nbsp;                  
              </td>
              <td>
                 <%= link_to "Delete", yield_path(y), :method => :delete %>
              </td>
          </tr>         
    <% end %>

  </table> 
<% end %>

